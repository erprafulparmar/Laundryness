<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background1">

    <ScrollView
        android:id="@+id/ScrollView_register"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Sign up"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:textSize="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Existing user?"
                    android:textSize="@dimen/title_size"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log in"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textColor="#fff"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/title_size"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ed_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Your Name"
                    android:maxLines="1"
                    android:padding="14dp"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:textColorHint="#9e9999"
                    android:textSize="@dimen/title_small_size" />

                <EditText
                    android:id="@+id/ed_emailid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Email ID"
                    android:maxLines="1"
                    android:padding="14dp"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:textColorHint="#9e9999"
                    android:textSize="@dimen/title_small_size" />

                <EditText
                    android:id="@+id/ed_mobileno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="2"
                    android:padding="14dp"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:textColorHint="#9e9999"
                    android:textSize="@dimen/title_small_size" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etPasswordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorWhite">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ed_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rounded_edittext"
                        android:paddingLeft="15dp"
                        android:hint="Password"
                        android:imeOptions="actionUnspecified"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textSize="@dimen/title_small_size"
                        android:singleLine="true"
                        android:textColor="#f4eeee"
                        android:textColorHint="#9e9999"
                        app:passwordToggleEnabled="true" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/etPasswordLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:hintEnabled="false"
                    app:passwordToggleTint="@color/colorWhite"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ed_re_enter_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rounded_edittext"
                        android:hint="Re-enter Password"
                        android:imeOptions="actionUnspecified"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:textColor="#f4eeee"
                        android:textSize="@dimen/title_small_size"
                        android:textColorHint="#9e9999"
                        app:passwordToggleEnabled="false" />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button"
                android:padding="10dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:layout_gravity="center"
                android:text="SIGN Up"
                android:textAlignment="center"
                android:textColor="#0e0e0e"
                android:textSize="@dimen/title_small_size"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:visibility="gone"
        android:id="@+id/OtpRelativeLayout"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".RegistrationOTP"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/background1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Sign up"
                        android:layout_marginTop="35dp"
                        android:textColor="#fff"
                        android:textSize="22dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="OTP Verification"
                        android:layout_marginTop="5dp"
                        android:textColor="#fff"
                        android:textSize="18dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer registered successfully."
                        android:textStyle="normal"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SMS Send to Mobile Number Auto Verification"
                            android:textStyle="normal"
                            android:gravity="center"
                            android:textSize="@dimen/title_small_size"
                            android:textColor="#fff"
                            android:layout_marginTop="30dp"
                            android:layout_gravity="center"/>

                        <EditText
                            android:id="@+id/tvMobile"
                            android:layout_width="286dp"
                            android:layout_height="47dp"
                            android:hint="Enter Mobile No"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:layout_marginTop="18dp"
                            android:textColorHint="#9e9999"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:visibility="gone"
                            android:background="@drawable/rounded_edittext"
                            android:textColor="#fff"
                            android:textSize="16dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            android:textColor="#fff"
                            android:visibility="gone"
                            android:text="Enter OTP Code"
                            android:layout_gravity="center"
                            android:gravity="center"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/edt1"
                                android:layout_width="60dp"
                                android:layout_height="73dp"
                                android:textColorHint="#9e9999"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:maxLength="1"
                                android:inputType="number"
                                android:background="@drawable/rounded_edittext"
                                android:textColor="#fff"
                                android:textSize="@dimen/title_size"/>

                            <EditText
                                android:id="@+id/edt2"
                                android:layout_width="60dp"
                                android:layout_height="73dp"
                                android:textColorHint="#9e9999"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:maxLength="1"
                                android:inputType="number"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/rounded_edittext"
                                android:textColor="#fff"
                                android:textSize="@dimen/title_size"/>

                            <EditText
                                android:id="@+id/edt3"
                                android:layout_width="60dp"
                                android:layout_height="73dp"
                                android:textColorHint="#9e9999"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:maxLength="1"
                                android:inputType="number"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/rounded_edittext"
                                android:textColor="#fff"
                                android:textSize="@dimen/title_size"/>

                            <EditText
                                android:id="@+id/edt4"
                                android:layout_width="60dp"
                                android:layout_height="73dp"
                                android:textColorHint="#9e9999"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:maxLength="1"
                                android:inputType="number"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/rounded_edittext"
                                android:textColor="#fff"
                                android:textSize="@dimen/title_size"/>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/ll_timer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                android:padding="5dp"
                                android:textColor="#fff"
                                android:text="You can Re-Send the OTP after  : "
                                android:layout_gravity="center"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/tvOtpTimer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textStyle="normal"
                                android:padding="5dp"
                                android:textColor="#fff"
                                android:text="00"
                                android:layout_gravity="center"
                                android:gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textStyle="normal"
                                android:padding="5dp"
                                android:textColor="#fff"
                                android:text="sec"
                                android:layout_gravity="center"
                                android:gravity="center"/>

                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_resendOTP"
                            style="?android:textAppearanceSmall"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="1dp"
                            android:layout_marginTop="10dp"
                            android:text="Re-Send OTP"
                            android:background="@drawable/rounded_button"
                            android:textAllCaps="false"
                            android:textColor="#393737"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>